/*
 * Functions
 */

border-radius()
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  border-radius: arguments


/*
 * Global Elements
 */
 
body
  font-family Verdana,Geneva,sans-serif
  
h1
  @media(max-width: 767px)
    font-size 2em
    
  @media(min-width: 768px)
    font-size 3em
  
h2
  @media(max-width: 767px)
    font-size 1.5em
    
  @media(min-width: 768px)
    font-size 2.5em
  
h3
  @media(max-width: 767px)
    font-size 1.3em
    
  @media(min-width: 768px)
    font-size 2em
  
h4
  @media(max-width: 767px)
    font-size 1.1em
    
  @media(min-width: 768px)
    font-size 1.5em
  
p
  margin-bottom 1em
  
/*
 * Bootstrap overrides
 */
 
.navbar-brand
  margin-right 40px
 
.card img
  width 100%
  
.card-title
  margin: 0
  
.list-inline li
  display inline
  
.card-block a
  margin 10px


/*
 * Layout
 */
  
#page-header
  min-height 300px
  padding-top 50px
  background-size 100%
  background-position 0px
  background-repeat no-repeat
  
  @media(max-width: 543px)
    padding-left 15px
    padding-right 15px
    
  @media(min-width: 544px) and (max-width: 767px)
    padding-left 50px
    padding-right 50px
    
  @media(min-width: 768px) and (max-width: 1049px)
    padding-left 100px
    padding-right 100px
    
  @media(min-width: 1050px)
    padding-left 250px
    padding-right 250px

#collapsableNavbar
  @media (max-width: 767px)
    ul li
      float none
      margin-left 0
 
#footer
  margin-top 10px
  padding-top 10px
  
#footer h3
  margin 10px

#footer img
  width 100%
    
#footer address
  margin 10px
  
.facebook
  color #3B5998

.twitter
  color #55ACEE
  
.instagram
  color #125688
  
/*
 * Content
 */
 
.filler
  padding 2em
 
#home-header
  background-color #fff
  opacity 0.5
  border-radius(20px)
  padding 0.5em 0
 
#home-photo-credit
  font-size 0.8em
  padding-right 5px
  text-align right
  
#home-cards
  padding 10px
  
#sponsors img
  width 80%
  vertical-align middle
  
#sponsors div
  @media (min-width: 768px) and (max-width: 991px)
    line-height 200px
  @media (min-width: 992px) and (max-width: 1199px)
    line-height 160px
  @media (min-width: 1200px)
    line-height 120px