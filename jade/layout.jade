mixin if(name)
  != '{{#' + name + '}}'
  block
  != '{{/' + name + '}}'

mixin unless(name)
  != '{{^' + name + '}}'
  block
  != '{{/' + name + '}}'

mixin each(name)
  != '{{#' + name + '}}'
  block
  != '{{/' + name + '}}'

doctype html
html(lang="en")
  head
    title Surf City AIDS Ride 2016
    meta(name='viewport', content='width=device-width, initial-scale=1')
    script(type="text/javascript").
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
    script(src='main.js')
    link(rel="stylesheet" href="css/main.css")
  body
    .container-fluid
      #nav.row
        nav.navbar.navbar-light.bg-faded
          .hidden-md-up
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#collapsableNavbar') &#9776;
            span Surf City AIDS Ride
          #collapsableNavbar.collapse.navbar-collapse.navbar-toggleable-sm
            a.hidden-sm-down.navbar-brand(href='#') Surf City AIDS Ride
            ul.nav.navbar-nav
              
              li(class='nav-item ' + (homeActive ? 'active' : ''))
                a.nav-link(href="/")
                  | Home
                  if homeActive
                    span.sr-only (current)

              li(class='nav-item ' + (dayOfEventActive ? 'active' : ''))
                a.nav-link(href="dayOfEvent.html")
                  | Day of Event
                  if dayOfEventActive
                    span.sr-only (current)

              li(class='nav-item ' + (routesActive ? 'active' : ''))
                a.nav-link(href="routes.html")
                  | Routes
                  if routesActive
                    span.sr-only (current)

              li(class='nav-item ' + (volunteerActive ? 'active' : ''))
                a.nav-link(href="volunteer.html")
                  | Volunteer
                  if volunteerActive
                    span.sr-only (current)

              li(class='nav-item ' + (sponsorsActive ? 'active' : ''))
                a.nav-link(href="sponsors.html")
                  | Sponsors
                  if sponsorsActive
                    span.sr-only (current)

              li(class='nav-item ' + (fundraisingActive ? 'active' : ''))
                a.nav-link(href="fundraising.html")
                  | Fundraising
                  if fundraisingActive
                    span.sr-only (current)

              li.nav-item
                a.nav-link(href="http://www.encompasscs.org/community-support-services/santa-cruz-aids-project-scap") About Us

      block content

      #footer.row.bg-faded
        .col-sm-12.col-md-6.col-lg-4.text-sm-center
          h3 Ride Organized By
          a(href='http://www.encompasscs.org/community-support-services/santa-cruz-aids-project-scap')
            img.img-responsive.center-block(src='./assets/encompass-logo.jpg', alt='Encompass logo')
          address
            a(href='http://www.encompasscs.org/community-support-services/santa-cruz-aids-project-scap') Santa Cruz AIDS Project <br/>
            | 542 Ocean Street <br/>
            | Santa Cruz, CA 95060 <br/>
            | 831-427-3900 <br/>
            a(href='mailto:SCAIDSRide@EncompassCS.org') SCAIDSRide@EncompassCS.org
        .col-sm-12.col-md-6.col-lg-4
          img.img-responsive.center-block(src='http://placehold.it/400x200', alt='Surf City AIDS Ride logo')
        .col-md-12.col-lg-4
          h4 Follow Us
          ul.list-inline
            li
              a(href='https://www.facebook.com/SurfCityAIDSRide/')
                i.fa.fa-5x.fa-facebook-official.facebook
            li
              a(href='https://twitter.com/surfctyaidsride')
                i.fa.fa-5x.fa-twitter.twitter
            li
              a(href='https://www.instagram.com/surfcityaidsride/')
                i.fa.fa-5x.fa-instagram.instagram