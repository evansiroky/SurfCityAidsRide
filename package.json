{
  "name": "SurfCityAidsRide",
  "version": "0.0.0",
  "description": "Website for Surf City Aids Ride 2016 (not including registration/donor pages)",
  "scripts": {
    "clean": "rimraf static/*",
    "prebuild": "npm run clean -s && node scripts/prepareStatic.js",
    "prebuild-dev": "npm run prebuild",
    "prebuild:css-dev": "stylus styles/ -o static",
    "prebuild:css": "stylus styles/ -c -o static",
    "build:css": "node scripts/buildCss.js",
    "build:css-dev": "node scripts/buildCss.js",
    "postbuild:css": "node scripts/postBuildCss.js",
    "postbuild:css-dev": "node scripts/postBuildCss.js",
    "prebuild:js": "node scripts/preBuildJs.js -p",
    "build:js": "browserify js/index.js > static/main.js",
    "postbuild:js": "uglifyjs static/main.js -o static/main.js",
    "prebuild:js-dev": "node scripts/preBuildJs.js",
    "build:js-dev": "browserify js/index.js > static/main.js",
    "build:js-dev-watch": "browserify js/index.js > static/main.js",
    "postbuild:js-dev-watch": "node scripts/beep.js",
    "build:html": "jade jade/index.jade -o static",
    "build:html-dev": "jade jade/index.jade -P -o static",
    "build": "npm run build:js && npm run build:html && npm run build:css",
    "build-dev": "npm run build:js-dev && npm run build:html-dev && npm run build:css-dev",
    "build-dev:watch": "npm run prebuild:js-dev && parallelshell \"npm run watch:js\" \"npm run watch:css\" \"npm run watch:html\"",
    "start": "node index.js",
    "watch:js": "watch \"npm run build:js-dev-watch\" js",
    "watch:css": "watch \"npm run build:css-dev\" styles",
    "watch:html": "watch \"npm run build:html-dev\" jade"
  },
  "author": "Evan Siroky",
  "license": "MIT",
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.min.js",
    "tether": "./node_modules/tether/dist/js/tether.min.js"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "jquery": "$",
    "tether": "Tether",
    "bootstrap": {
      "depends": [
        "tether"
      ]
    }
  },
  "cssBuild": {
    "outFile": "static/css/main.css"
  },
  "devDependencies": {
    "bootstrap": "^4.0.0-alpha.2",
    "browserify": "^12.0.1",
    "browserify-shim": "^3.8.11",
    "concat": "^1.0.0",
    "font-awesome": "^4.5.0",
    "fs-extra": "^0.26.2",
    "ga-browser": "^1.0.0",
    "jade": "^1.11.0",
    "jquery": "^2.1.4",
    "parallelshell": "^2.0.0",
    "rimraf": "^2.4.4",
    "stylus": "^0.52.4",
    "tether": "^1.2.0",
    "uglifyjs": "^2.4.10",
    "watch": "^0.16.0"
  }
}
